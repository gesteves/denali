<% cache "entry/meta/#{entry.id}/#{entry.updated_at.to_i}" do %>
  <title><%= raw "#{entry.plain_title} &middot; #{entry.blog.name}" %></title>
  <meta name="description" content="<%= meta_description entry %>">
  <meta property="og:title" content="<%= entry.plain_title %>">
  <% if entry.is_photo? %>
    <meta property="og:image" content="<%= entry.photos.first.url(w: 1200) %>">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="<%= ((entry.photos.first.height.to_f * 1200.00)/entry.photos.first.width.to_f).round %>">
  <% end %>
  <meta property="og:description" content="<%= meta_description entry %>">
  <meta property="og:url" content="<%= entry.permalink_url %>">
  <meta property="og:type" content="Article">
  <meta property="og:site_name" content="<%= @photoblog.name %>">
  <meta property="og:locale" content="en_US">

  <% if Rails.application.config.social.twitter.enabled == true %>
    <meta name="twitter:site" content="<%= Rails.application.config.social.twitter_handle %>">
    <meta name="twitter:creator" content="<%= Rails.application.config.social.twitter_handle %>">
  <% end %>>
  <meta name="twitter:title" content="<%= entry.plain_title %>">
  <meta name="twitter:url" content="<%= entry.permalink_url %>">
  <meta name="twitter:description" content="<%= meta_description entry %>">
  <% if entry.is_photo? %>
    <meta name="twitter:image" content="<%= entry.photos.first.url(w: 1200) %>">
  <% end %>
  <meta name="twitter:card" content="<%= entry.is_text? ? "summary" : "summary_large_image" %>">
  <%= auto_discovery_link_tag :atom, entries_url(page: 1, format: 'atom'), title: entry.blog.name %>
  <link rel="alternate" type="application/vnd.api+json" href="<%= entry.permalink_url %>">
  <link rel="alternate" type="application/json+oembed" href="<%= oembed_url + "?url=#{URI.encode entry.permalink_url}&format=json" %>">
  <link rel="alternate" type="text/xml+oembed" href="<%= oembed_url + "?url=#{URI.encode entry.permalink_url}&format=xml" %>">
  <link rel="amphtml" href="<%= entry.permalink_url(format: 'amp') %>">
  <link rel="canonical" href="<%= entry.permalink_url %>">
  <script type="application/ld+json">
    <%= raw render partial: 'entries/entry_schema.json.jbuilder', locals: { entry: entry } %>
  </script>
<% end %>
