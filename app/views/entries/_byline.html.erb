<p>
  <% if entry.is_published? %>
    Published
  <% elsif entry.is_queued? %>
    Queued
  <% elsif entry.is_draft? %>
    Drafted
  <% else %>
    Updated
  <% end %>
  <% if entry.is_published? %>
    on <%= link_to entry.published_at.strftime('%B %-d, %Y'), entry.permalink_url %>
  <% elsif entry.is_queued? %>
    for <%= link_to publish_date_for_queued(entry, '%B %-d, %Y'), preview_entry_url(entry.preview_hash) %>
  <% else %>
    on <%= link_to entry.updated_at.strftime('%B %-d, %Y'), preview_entry_url(entry.preview_hash) %>
  <% end %>
</p>
