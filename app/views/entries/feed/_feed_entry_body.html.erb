<% entry.photos.each do |photo| %>
  <%= link_to image_tag(photo.url(width: 1280).html_safe, srcset: "#{photo.url(width: 1280)} 1x, #{photo.url(width: 2560)} 2x".html_safe, alt: photo.alt_text), entry.permalink_url %>
<% end %>
<%= entry.formatted_body unless entry.body.blank? %>
<%= render partial: 'entries/feed/exif', formats: :html, object: entry.photos.first, as: :photo if entry.is_single_photo? %>
<%= render partial: 'entries/feed/location', formats: :html, object: entry, as: :entry if entry.is_single_photo? && entry.show_location? %>
<%= render partial: 'entries/feed/disclaimer', formats: :html, object: entry, as: :entry %>

