<title>Add <%= @photoblog.name %> to Slack</title>
<meta name="description" content="Get notified in Slack when a new photo is published to <%= @photoblog.name %>.">
<link rel="canonical" href="<%= slack_url %>">

<meta property="og:title" content="Add <%= @photoblog.name %> to Slack">
<meta property="og:image" content="<%= image_url 'slack-facebook.png' %>">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">
<meta property="og:description" content="Get notified in Slack when a new photo is published to <%= @photoblog.name %>.">
<meta property="og:url" content="<%= slack_url %>">
<meta property="og:type" content="Website">
<meta property="og:site_name" content="<%= @photoblog.name %>">
<meta property="og:locale" content="en_US">

<% if Rails.application.config.social['twitter']['enabled'] == true %>
  <meta name="twitter:site" content="@<%= Rails.application.config.social['twitter']['username'] %>">
  <meta name="twitter:creator" content="@<%= Rails.application.config.social['twitter']['username'] %>">
<% end %>
<meta name="twitter:title" content="Add <%= @photoblog.name %> to Slack">
<meta name="twitter:url" content="<%= slack_url %>">
<meta name="twitter:description" content="Get notified in Slack when a new photo is published to <%= @photoblog.name %>.">
<meta name="twitter:image" content="<%= image_url 'slack-facebook.png'  %>">
<meta name="twitter:card" content="summary_large_image">
