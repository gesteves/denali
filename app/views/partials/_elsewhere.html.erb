<aside class="elsewhere" aria-labelledby="elsewhere">
  <h2 class="elsewhere__heading" id="elsewhere">Elsewhere on the Web</h2>
  <ul class="elsewhere__list">
    <li class="elsewhere__item"><a href="<%= feed_url %>" title="Subscribe to Feed" aria-label="Subscribe to Feed"><%= inline_svg :feed, class_name: 'elsewhere__icon' %><span class="elsewhere__label">Feed</span></a></li>
    <% if @photoblog.flickr.present? %>
      <li class="elsewhere__item"><a href="<%= @photoblog.flickr %>" rel="me" title="Follow on Flickr" aria-label="Follow on Flickr" target="_blank"><%= inline_svg :flickr, class_name: 'elsewhere__icon' %><span class="elsewhere__label">Flickr</span></a></li>
    <% end %>
    <% if @photoblog.instagram.present? %>
      <li class="elsewhere__item"><a href="<%= @photoblog.instagram %>" rel="me" title="Follow on Instagram" aria-label="Follow on Instagram" target="_blank"><%= inline_svg :instagram, class_name: 'elsewhere__icon' %><span class="elsewhere__label">Instagram</span></a></li>
    <% end %>
    <% if @photoblog.mastodon.present? %>
      <li class="elsewhere__item"><a href="<%= @photoblog.mastodon %>" rel="me" title="Follow on Mastodon" aria-label="Follow on Mastodon" target="_blank"><%= inline_svg :mastodon, class_name: 'elsewhere__icon' %><span class="elsewhere__label">Mastodon</span></a></li>
    <% end %>
    <% if @photoblog.tumblr.present? %>
      <li class="elsewhere__item"><a href="<%= @photoblog.tumblr %>" rel="me" title="Follow on Tumblr" aria-label="Follow on Tumblr" target="_blank"><%= inline_svg :tumblr, class_name: 'elsewhere__icon' %><span class="elsewhere__label">Tumblr</span></a></li>
    <% end %>
  </ul>
</aside>

