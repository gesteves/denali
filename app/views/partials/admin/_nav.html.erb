<% cache "admin/nav/#{active_nav || 'none'}/#{@photoblog.id}/#{@photoblog.updated_at.to_i}" do %>
  <nav class="nav">
    <div class="nav__group">
      <a href="<%= new_admin_entry_path %>" class="nav__link <%= 'nav__link--is-active' if active_nav == 'new' %>">Post a new entry</a>
      <a href="<%= admin_entries_path %>" class="nav__link <%= 'nav__link--is-active' if active_nav == 'published' %>">Published <%= published_count %></a>
      <a href="<%= queued_admin_entries_path %>" class="nav__link <%= 'nav__link--is-active' if active_nav == 'queued' %>">Queued <%= queued_count %></a>
      <a href="<%= drafts_admin_entries_path %>" class="nav__link <%= 'nav__link--is-active' if active_nav == 'drafts' %>">Drafts <%= drafts_count %></a>
      <a href="<%= admin_tags_path %>" class="nav__link <%= 'nav__link--is-active' if active_nav == 'tags' %>">Tags <%= tag_count %></a>
      <% if @photoblog.has_search? %>
        <%= form_tag(admin_search_path, method: 'get', class: 'search') do %>
          <%= text_field_tag :query, @query || '', placeholder: 'Search entries', class: 'search__input' %>
        <% end %>
      <% end %>
    </div>
    <a href="<%= root_path %>" class="nav__link">View site</a>
    <a href="<%= admin_settings_path %>" class="nav__link <%= 'nav__link--is-active' if active_nav == 'settings' %>">Settings</a>
    <a href="<%= signout_path %>" class="nav__link">Sign out</a>
  </nav>
<% end %>
