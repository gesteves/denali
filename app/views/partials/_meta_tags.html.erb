<% cache @photoblog do %>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
  <meta name="theme-color" content="#eeeeee" media="(prefers-color-scheme: light)">
  <meta name="theme-color" content="#111111" media="(prefers-color-scheme: dark)">
  <% if ENV['FACEBOOK_APP_ID'].present? %>
    <meta property="fb:app_id" content="<%= ENV['FACEBOOK_APP_ID'] %>">
  <% end %>
  <% if !Rails.env.production? %>
    <meta name="robots" content="noindex">
  <% end %>
  <%= @photoblog.additional_meta_tags&.html_safe %>
  <link rel="manifest" href="<%= manifest_path %>">
  <% if ENV['ENABLE_SVG_FAVICON'].present? %>
    <link rel="icon" href="<%= image_url('svg/a.svg') %>" type="image/svg+xml">
    <link rel="mask-icon" href="<%= image_url('svg/a.svg') %>" color="black">
  <% elsif @photoblog.favicon.attached? %>
    <link rel="icon" href="<%= @photoblog.favicon_url(width: 96) %>" type="image/png">
  <% end %>
  <% if @photoblog.touch_icon.attached? %>
    <link rel="apple-touch-icon" href="<%= @photoblog.touch_icon_url(width: 180) %>" sizes="180x180">
    <link rel="apple-touch-icon" href="<%= @photoblog.touch_icon_url(width: 152) %>" sizes="152x152">
    <link rel="apple-touch-icon" href="<%= @photoblog.touch_icon_url(width: 120) %>" sizes="120x120">
    <link rel="apple-touch-icon" href="<%= @photoblog.touch_icon_url(width: 76) %>" sizes="76x76">
  <% end %>
  <meta name="bingbot" content="noarchive">
<% end %>
